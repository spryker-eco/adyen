<?xml version="1.0"?>
<statemachine
        xmlns="spryker:oms-01"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="spryker:oms-01 http://static.spryker.com/oms-01.xsd">

    <process name="AdyenAliPay01" main="true">
        <states>
            <state name="new" reserved="true" />
            <state name="authorized and captured" reserved="true" />
            <state name="authorize and capture failed" reserved="false" />
            <state name="shipped" reserved="true" />
            <state name="refunded" reserved="false" />
            <state name="refund failed" reserved="false" />
            <state name="closed" reserved="false" />
        </states>

        <events>
            <event name="invalidation" timeout="20min" />
            <event name="ship" manual="true" />
            <event name="refund" manual="true" command="Adyen/CancelOrRefund" />
            <event name="close" manual="true" />
        </events>

        <transitions>

            <transition condition="Adyen/IsAuthorizedAndCaptured" happy="true">
                <source>new</source>
                <target>authorized and captured</target>
            </transition>

            <transition>
                <source>new</source>
                <target>authorize and capture failed</target>
                <event>invalidation</event>
            </transition>

            <transition condition="Adyen/IsRefunded">
                <source>authorized and captured</source>
                <target>refunded</target>
                <event>refund</event>
            </transition>

            <transition>
                <source>authorized and captured</source>
                <target>refund failed</target>
                <event>refund</event>
            </transition>

            <transition happy="true">
                <source>authorized and captured</source>
                <target>shipped</target>
                <event>ship</event>
            </transition>

            <transition happy="true">
                <source>shipped</source>
                <target>closed</target>
                <event>close</event>
            </transition>

        </transitions>
    </process>
</statemachine>
